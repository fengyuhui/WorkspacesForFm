#fm-covermain{margin: 0 auto;border-radius: 20rpx;overflow: hidden;position: relative;z-index: 3;width:700rpx;height:550rpx;
background-color: #bbb}
#fm-cmpic{position: absolute;left:0;top: 0;z-index: 2; opacity: 0;}
#fm-covermain.fadein{ animation:  fadein linear 1s; opacity: 1; transition:  all linear 1s}
#fm-covermain image{width: 400rpx;height:400rpx;}
#fm-covermain #fm-cmbg{margin:40rpx 90rpx ;width:350rpx;height: 350rpx;}

#user{position: relative;height:0;padding-top:20%;width:100%;background-size:cover;background-position: center center;
background-repeat: no-repeat;background-color: #fff;border-bottom:1rpx solid #fff;}
#user_info{position: absolute;left:40rpx;bottom:50rpx;color: #fff;overflow: hidden}
#user_ava{width:90rpx;height:90rpx;border-radius: 50%;border:2rpx solid #fff;vertical-align: middle;margin-right:15rpx;}


@keyframes fadein{
    0%{ opacity: 0}
    100%{ opacity: 1}
}


#fm-mdes{ text-align: center;color: #fff;line-height: 2;}
#fm-martist{font-size:24rpx; display: block;color: #eee}

#fm-fixed{margin:300rpx 0 ;width:700rpx;height: 400rpx;}
#fm-action{margin: 30rpx 0;display: flex}
#fm-action view{flex: 1;text-align: center;position: relative;width: 100%}
#fm-action image{width: 125rpx;height:125rpx;}

.like text{position: absolute;font-size: 25rpx;left:30%;top:80%;color: #fff}

#title text{position: absolute;font-size: 40rpx;left:3%;top:15%;margin-left:10rpx;margin-top: -35rpx;color: #fff}

#title image{position: absolute;right:0;top:0;width: 150rpx;height:150rpx;}

#musicName{flex: 1;text-align: center;position: absolute;left:0;top:35%;margin-left:10rpx;margin-top: -35rpx;width: 100%}
.musicName text{font-size: 37rpx;color: #fff}

#types{margin: 50rpx 0;display: flex}
#types view{flex: 1;text-align: center;position: relative;width: 100%}
#types image{width: 80rpx;height:80rpx;}
#types text{position: absolute;font-size: 29rpx;left:25%;top:95%;color: #aaa}

